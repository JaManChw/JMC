<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
    <mapper namespace="com.kh.jaManChw.login.dao.face.KakaoDao">
     
     <select id="findKakaoInfo" resultType="com.kh.jaManChw.dto.Users" parameterType="java.util.HashMap">
     	SELECT * 
     	FROM USERS
     	WHERE SOCIAL_NUM=#{socialId} and USER_NICK=#{userNick}    
     </select>
     
    <insert id="insertKakaoInfo" parameterType="java.util.HashMap">
	  	INSERT INTO USERS(USERNO,USER_ID,USER_PW,USER_NICK,USER_NAME,BIRTH,GENDER,EMAIL,PHONE,ADDR1,ADDR2,ADDR3,GRADE,WARN_COUNT,PROFIL_IMG_URL,STATUS,ROLE,PLATFORM_OPTION,JOIN_DATE,SOCIAL_NUM)
	  	VALUES (USERS_SEQ.NEXTVAL,'default','default',#{userNick},'NAME',SYSDate,'default','default','default','default','default','default',DEFAULT,DEFAULT,DEFAULT,DEFAULT,DEFAULT,DEFAULT,sysdate,#{socialId}) 
	  </insert>
    
    </mapper>