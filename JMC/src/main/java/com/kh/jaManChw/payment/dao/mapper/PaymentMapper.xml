<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace ="com.kh.jaManChw.payment.dao.face.PaymentDao">

	<insert id="insertPayment" parameterType="Payment" >
		insert INTO buy_list values(BUY_LIST_SEQ.nextval, 23, 1, #{orderName}, 100, 'abc', current_stamp)
	</insert>

	<select id="selectShoppingAllBasketList" resultType="hashmap" parameterType="int">
		select S.*, I.ITEM_TITLE,I.item_price FROM shopping_basket S, item I where S.basketno = ${basketno} and S.itemno = I.itemno
	</select>
	
	<select id="selectOncetrypayno" resultType="int">
		SELECT oncetrypay_seq.nextVal FROM dual
	</select>
</mapper>